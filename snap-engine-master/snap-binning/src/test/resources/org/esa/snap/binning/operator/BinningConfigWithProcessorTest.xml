<parameters>

    <numRows>4320</numRows>
    <maskExpr>!l2_flags.INVALID &amp;&amp; l2_flags.WATER</maskExpr>

    <variables>
        <variable>
            <name>ndvi</name>
            <expr>(reflec_10 - reflec_6) / (reflec_10 + reflec_6)</expr>
        </variable>
    </variables>

    <compositingType>MOSAICKING</compositingType>

    <aggregators>
        <aggregator>
            <type>AVG</type>
            <varName>tsm</varName>
        </aggregator>
        <aggregator>
            <type>ON_MAX_SET</type>
            <onMaxVarName>ndvi</onMaxVarName>
            <setVarNames>reflec_3,reflec_7,reflec_8</setVarNames>
        </aggregator>
        <aggregator>
            <type>MIN_MAX</type>
            <varName>chl</varName>
        </aggregator>
    </aggregators>

    <postProcessor>
        <type>Selection</type>
        <varNames>tsm_mean, tsm_sigma, chl_min,cmax = chl_max </varNames>
    </postProcessor>

</parameters>
